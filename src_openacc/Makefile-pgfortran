# Makefile for PUMA without GUI
# Xinyu Wen, Peking Univ, Mar/23/2017

#=====================
# 1. Compiler & Flags
#=====================
# GNU gfortran
#F90    = gfortran
#FLAGS  = -Ofast -fopenmp#-Wall #-pg 
#OTHERS = -ffree-line-length-none
#USELESS= -fdefault-real-8 -fbacktrace -ffpe-trap=underflow,denormal

# PGI pgfortran
F90    = pgfortran
FLAGS  = -fast #-acc -Minfo=accel,inline -ta=tesla:cc60 #-ta=multicore
OTHERS = -Minfo=inline -Minline=calcgp,mktend_acc,sp2fc_nlev_acc,sp2fc_1lev_acc,fc2sp_1lev_acc,dv2uv_nlev_acc,sp2fcdmu_1lev_acc,gp2fc_acc,fc2gp_acc,dfft2_acc,dfft3_acc,dfft4_acc,dfft8_acc,ifft2_acc,ifft3_acc,ifft4_acc,ifft8_acc,reshape

# Intel ifort
#F90    = ifort
#FLAGS  = -fast
#OTHERS = -parallel
#OTHERS = -qopenmp
#USELESS= -parallel

#=====================
# 2. if MPI?
#=====================
# No
#MPIMOD	= mod_mpi_stub

#====================
# 3. Compile
#====================
OBJ = pkugcm.o mod_fft.o mod_legsym.o mod_restart.o mod_io.o

%.o : %.f08
	${F90} $(FLAGS) $(OTHERS) -c $<

pkugcm.x:	$(OBJ)
	${F90} $(FLAGS) $(OTHERS) -o pkugcm.x $(OBJ)

mod_dycore.o:  mod_dycore.f08
pkugcm.o:      pkugcm.f08
mod_fft.o:     mod_fft.f08
mod_legsym.o:  mod_legsym.f08
mod_restart.o: mod_restart.f08
mod_io.o:      mod_io.f08

#====================
# 4. Clean
#====================
clean:
	rm -f *.o *.mod

cleano:
	rm -f *.o

cleanmod:
	rm -f *.mod
 
cleanall:
	rm -f *.o *.mod
	rm -f pkugcm.x

